{
    "name": "my-editor",
    "version": "1.0.0",
    "description": "A minimal Electron application",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "build": {
        "appId": "my-editor.lisong.hn.cn",
        "asar": true,
        "directories": {
            "buildResources": "build",
            "output": "dist"
        },
        "win": {
            "target": [
                {
                    "target": "nsis"
                }
            ],
            "icon": "./render/favicon.ico",
            "asarUnpack": [
                "src/**",
                "README.md"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "./render/favicon.ico",
            "uninstallerIcon": "./render/favicon.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    },
    "devDependencies": {
        "electron": "^19.0.0-beta.4",
        "electron-builder": "^23.0.3"
    },
    "dependencies": {
        "@electron/remote": "^2.0.5",
        "eslint": "^7.32.0",
        "stylelint": "^14.8.0",
        "stylelint-config-css-modules": "^4.1.0"
    }
}
