{
    "name": "my-editor",
    "version": "1.0.0",
    "description": "A minimal Electron application",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "build": {
        "appId": "lisong.hn.cn",
        "productName": "my-editor",
        "win": {
            "icon": "render/favicon.ico",
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true
        }
    },
    "devDependencies": {
        "electron": "^18.0.3",
        "electron-builder": "^23.0.3"
    },
    "dependencies": {
        "eslint": "^7.32.0",
        "stylelint": "^14.8.0",
        "stylelint-config-css-modules": "^4.1.0"
    }
}
